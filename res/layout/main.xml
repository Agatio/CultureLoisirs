<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recherche par Ville"
            android:id="@+id/textView2" android:layout_gravity="center_horizontal" android:gravity="center_horizontal"
            android:layout_weight="0.03" android:textSize="20dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:weightSum="1">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Ville ?"
                android:id="@+id/textView" android:layout_weight="0.19" android:gravity="center"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText2" android:layout_weight="0.67"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="0.03">
        <TextView
                android:layout_width="103dp"
                android:layout_height="48dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Type ?"
                android:id="@+id/textView3" android:gravity="center"/>
        <Spinner
                android:layout_width="wrap_content"
                android:layout_height="53dp"
                android:id="@+id/spinner"/>
    </LinearLayout>
</LinearLayout>

